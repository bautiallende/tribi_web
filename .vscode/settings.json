{
  // Comunes
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  // Python
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.tabSize": 4
  },
  // JavaScript/TypeScript/React
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  // Ruff en lugar de pylint
  "python.linting.ruffEnabled": true,
  // Copilot
  "github.copilot.enable": true,
  // Usabilidad
  "files.autoSave": "onFocusChange",
  "editor.minimap.enabled": false,
  "workbench.colorTheme": "One Dark Pro",
  "python.defaultInterpreterPath": "c:\\Users\\bauti\\AppData\\Local\\Microsoft\\WindowsApps\\python3.12.exe",
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",
  "geminicodeassist.updateChannel": "Insiders",

  // Python - Debug & Testing
  "python.debugging.enabled": true,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [
    "apps/backend/tests",
    "-v"
  ],

  // Pylance - Type checking
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.extraPaths": [
    "${workspaceFolder}/apps/backend"
  ],

  // Node.js debugging
  "debug.node.showUseWasmCommand": true,
  
  // TypeScript - Monorepo
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true
}
