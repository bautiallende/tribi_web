# Backend
ENVIRONMENT=development
MYSQL_ROOT_PASSWORD=tribi_root
MYSQL_DATABASE=tribi
MYSQL_USER=tribi
MYSQL_PASSWORD=tribi
MYSQL_PORT=3306
MYSQL_HOST=localhost
BACKEND_PORT=8000
INVOICE_PREFIX=TRB
SALES_EXPORT_FILENAME=tribi-sales

# Auth / Cookies
COOKIE_SECRET=cookie-secret-change-in-production
COOKIE_DOMAIN=.tribi.app
COOKIE_SECURE=true
COOKIE_SAMESITE=lax

# Observability / Logging
LOG_LEVEL=INFO
LOG_FORMAT=console
ENABLE_REQUEST_LOGS=true
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.0
SENTRY_PROFILES_SAMPLE_RATE=0.0

# Analytics
ANALYTICS_DEFAULT_RANGE_DAYS=30
ANALYTICS_PROJECTION_WINDOW_DAYS=14
ANALYTICS_PROJECTION_HORIZON_DAYS=7

# Payments
PAYMENT_PROVIDER=MOCK
DEFAULT_CURRENCY=USD
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_secret

# Rate limiting
RATE_LIMIT_CODES_PER_MINUTE=1
RATE_LIMIT_CODES_PER_DAY=5
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_WINDOW_HOURS=24
RATE_LIMIT_CODES_PER_IP_PER_DAY=25

# eSIM Provider
ESIM_PROVIDER=LOCAL
CONNECTED_YOU_BASE_URL=https://sandbox.api.connectedyou.com
CONNECTED_YOU_API_KEY=
CONNECTED_YOU_PARTNER_ID=
CONNECTED_YOU_TIMEOUT_SECONDS=20
CONNECTED_YOU_DRY_RUN=true

# Web
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# Mobile
EXPO_PUBLIC_API_BASE=http://localhost:8000
