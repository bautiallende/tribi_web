# Environment
ENVIRONMENT=development

# MySQL DatabaseMYSQL_ROOT_PASSWORD=

MYSQL_ROOT_PASSWORD=MYSQL_DATABASE=tribi

MYSQL_DATABASE=tribiMYSQL_USER=tribi

MYSQL_USER=tribiMYSQL_PASSWORD=tribi

MYSQL_PASSWORD=tribiMYSQL_PORT=3306

MYSQL_PORT=3306BACKEND_PORT=8000

# Backend Server
BACKEND_PORT=8000

# JWT & Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# Cookie Session
COOKIE_SECRET=your-cookie-secret-change-in-production
COOKIE_DOMAIN=.tribi.app  # or None for same-domain
COOKIE_SECURE=true
COOKIE_SAMESITE=lax

# Observability / Logging
LOG_LEVEL=INFO
LOG_FORMAT=console
ENABLE_REQUEST_LOGS=true
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.0
SENTRY_PROFILES_SAMPLE_RATE=0.0

# Rate Limiting
RATE_LIMIT_CODES_PER_MINUTE=1
RATE_LIMIT_CODES_PER_DAY=5
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_WINDOW_HOURS=24
RATE_LIMIT_CODES_PER_IP_PER_DAY=25

# SMTP Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=false
SMTP_FROM_EMAIL=noreply@tribi.app

# Frontend Origins (JSON array)
FRONTEND_ORIGINS=["http://localhost:3000","http://localhost:19006"]
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:19006"]

# Payment Provider
PAYMENT_PROVIDER=MOCK

# Admin Access (comma-separated list of admin emails)
ADMIN_EMAILS=admin@tribi.app,superuser@tribi.app

# Analytics Defaults
ANALYTICS_DEFAULT_RANGE_DAYS=30
ANALYTICS_PROJECTION_WINDOW_DAYS=14
ANALYTICS_PROJECTION_HORIZON_DAYS=7
